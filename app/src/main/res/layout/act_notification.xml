<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:parallax_factor="1.9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thumb_detail_content_layout">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/thumb_detail_content"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:layout_below="@id/thumb_detail_content_layout">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/title_and_kanal_detail_content_layout"
                android:orientation="horizontal">
                <id.co.viva.news.app.component.RobotoBoldTextView
                    android:id="@+id/title_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
            </LinearLayout>
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/date_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/date_color"
                android:layout_below="@id/title_and_kanal_detail_content_layout"
                android:textSize="12sp"/>
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/reporter_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_detail_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/red"
                android:textSize="15sp"/>
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/reporter_detail_content"
                android:id="@+id/horizontal_list"/>
            <com.viewpagerindicator.LinePageIndicator
                android:id="@+id/indicator"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@id/horizontal_list"
                app:strokeWidth="4dp"
                app:lineWidth="30dp"
                app:unselectedColor="#FF888888"
                app:selectedColor="@color/blue"/>
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/content_detail_content"
                android:lineSpacingExtra="6px"
                android:layout_below="@id/indicator"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/text_move_video"
                android:layout_below="@id/content_detail_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/label_video_click"
                android:textColor="@color/blue"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <id.co.viva.news.app.component.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/label_no_results"
                android:textColor="@color/header_grey"
                android:id="@+id/text_no_result_detail_content"/>
            <id.co.viva.news.app.component.ProgressWheel
                android:id="@+id/progress_wheel"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                wheel:barColor="@color/blue"
                wheel:progressIndeterminate="true" />
            <com.andexert.library.RippleView
                android:id="@+id/layout_ripple_view_detail_subkanal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                ripple:rv_color="@color/transparent"
                ripple:rv_centered="true">
                <Button
                    android:id="@+id/btn_retry"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="Retry"/>
            </com.andexert.library.RippleView>
        </RelativeLayout>
    </RelativeLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>