<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nirhart.parallaxscroll.views.ParallaxScrollView
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll_layout"
        app:parallax_factor="1.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/thumb_detail_content_default"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:layout_below="@id/thumb_detail_content_default">
                <id.co.viva.news.app.component.RobotoBoldTextView
                    android:id="@+id/title_detail_content_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/date_detail_content_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/date_color"
                    android:layout_below="@id/title_detail_content_default"
                    android:textSize="12sp"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/reporter_detail_content_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_detail_content_default"
                    android:textColor="@color/red"
                    android:layout_marginBottom="15dp"
                    android:textSize="15sp"/>
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/reporter_detail_content_default"
                    android:id="@+id/horizontal_list"/>
                <com.viewpagerindicator.LinePageIndicator
                    android:id="@+id/indicator"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/horizontal_list"
                    app:strokeWidth="4dp"
                    app:lineWidth="30dp"
                    app:unselectedColor="#FF888888"
                    app:selectedColor="@color/blue"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/content_detail_content_default"
                    android:layout_below="@id/indicator"
                    android:lineSpacingExtra="1dp"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_below="@id/content_detail_content_default"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/layout_button_next_previous">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/page_previous_start"
                        android:src="@drawable/previous_start"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/page_previous"
                        android:src="@drawable/previous"/>
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/text_page_index"/>
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Of"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black" />
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/text_page_size"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/page_next"
                        android:src="@drawable/next"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/page_next_end"
                        android:src="@drawable/next_end"/>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_comment"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/layout_button_next_previous"
                    android:text="@string/label_comments_from_detail"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/text_move_video"
                    android:layout_below="@id/btn_comment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_video_click"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:layout_below="@id/text_move_video"
                    android:id="@+id/layout_preview_comment_list">
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Komentar"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_margin="5dp"
                        android:background="@color/transparent"/>
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/text_preview_comment_user"/>
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/text_preview_comment_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/header_related_article"
                    android:layout_below="@id/layout_preview_comment_list"
                    android:background="@color/header_grey">
                    <id.co.viva.news.app.component.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:text="@string/label_related_article"/>
                </RelativeLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/header_related_article"
                    android:id="@+id/list_related_article_default"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_no_results"
                    android:textColor="@color/header_grey"
                    android:id="@+id/text_no_result_detail_content"/>
                <id.co.viva.news.app.component.ProgressWheel
                    android:id="@+id/progress_wheel"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    wheel:progressIndeterminate="true" />
            </RelativeLayout>
        </RelativeLayout>
    </com.nirhart.parallaxscroll.views.ParallaxScrollView>
</LinearLayout>
