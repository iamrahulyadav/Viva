<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">
        <RelativeLayout
            android:id="@+id/header_terbaru_headline_and_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/text_terbaru_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_headline_terbaru_new"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/date_terbaru_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/header_headline_terbaru_new"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </RelativeLayout>
        <id.co.viva.news.app.component.LoadMoreListView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list_terbaru_headline"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:fadingEdge="none"
            android:fitsSystemWindows="true"
            android:padding="12dp"
            android:scrollbarStyle="outsideOverlay"
            tools:ignore="overdraw"
            android:layout_below="@id/header_terbaru_headline_and_date"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/loading_progress_layout_headline_terbaru"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"/>
        <id.co.viva.news.app.component.BounvenoTextView
            android:layout_below="@id/loading_progress_layout_headline_terbaru"
            android:id="@+id/text_loading_data"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_loading_data"/>
        <com.andexert.library.RippleView
            android:id="@+id/layout_ripple_view_headline_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            ripple:rv_color="@color/transparent"
            ripple:rv_centered="true">
            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:text="Retry"
                android:background="@drawable/shadow_button_headline_terbaru"/>
        </com.andexert.library.RippleView>
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cm_arrow_up"
            android:layout_margin="16dp"
            fab:fab_colorNormal="@color/header_headline_terbaru_new"
            fab:fab_colorPressed="@color/header_headline_terbaru"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coachmark_nav_toggle"></RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coachmark_search"></RelativeLayout>
    </RelativeLayout>