<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/image_item_news"
            android:layout_width="match_parent"
            android:background="@drawable/default_image"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon_headline_terbaru"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/title_item_latest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:maxLines="3"
                    android:paddingTop="6dip"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/date_item_news"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/title_item_latest"
                    android:text="@android:string/unknownName"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:textColor="#424242" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>