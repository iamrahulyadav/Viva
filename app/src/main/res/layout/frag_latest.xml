<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/dark">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_headline"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="190dp">
            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pager_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:id="@+id/header_terbaru_and_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_below="@id/vp_headline">
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/text_terbaru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_grey"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="@string/label_terbaru"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/date_terbaru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/header_grey"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/list_news"
            android:layout_width="fill_parent"
            android:choiceMode="singleChoice"
            android:divider="@color/list_divider"
            android:layout_below="@id/header_terbaru_and_date"
            android:dividerHeight="0dp"
            android:layout_height="fill_parent">
        </ListView>
        <RelativeLayout
            android:id="@+id/loading_progress_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp">
            <id.co.viva.news.app.component.LoadingView
                android:id="@+id/loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_action_refresh_light"/>
        </RelativeLayout>
    </RelativeLayout>