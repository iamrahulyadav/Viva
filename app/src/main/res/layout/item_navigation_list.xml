<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/list_selector">
        <ImageView
            android:id="@+id/icon_navigation_list"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <id.co.viva.news.app.component.BounvenoTextView
            android:id="@+id/text_navigation_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_navigation_list"
            android:textColor="@color/nav_drawer_group_grey"/>
</RelativeLayout>