<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:parallax_factor="1.9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thumb_detail_latest_layout">
            <ImageView
                android:id="@+id/thumb_detail_news"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:layout_below="@id/thumb_detail_latest_layout">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/title_and_kanal_detail_latest_layout"
                android:orientation="horizontal">
                <id.co.viva.news.app.component.BounvenoTextView
                    android:id="@+id/title_detail_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/date_detail_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/date_color"
                android:layout_below="@id/title_and_kanal_detail_latest_layout"
                android:textSize="16sp"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/reporter_detail_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_detail_news"
                android:layout_marginBottom="20dp"
                android:textColor="@color/red"
                android:textSize="16sp"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/content_detail_news"
                android:layout_below="@id/reporter_detail_news"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="15px"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/content_detail_news"
                android:id="@+id/image_content"></LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/header_related_article"
                android:layout_below="@id/image_content"
                android:background="@color/header_grey">
                <id.co.viva.news.app.component.BounvenoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="@string/label_related_article"/>
            </RelativeLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/header_related_article"
                android:id="@+id/list_related_article"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/label_no_results"
                android:layout_below="@id/reporter_detail_news"
                android:textColor="@color/header_grey"
                android:id="@+id/text_no_result_detail_news"/>
            <RelativeLayout
                android:id="@+id/loading_progress_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/reporter_detail_news"
                android:padding="10dp">
                <id.co.viva.news.app.component.LoadingView
                    android:id="@+id/loading_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_action_refresh_light"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>