<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/card_background">
    <LinearLayout
        android:id="@+id/header_item_list_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_profile"
            android:gravity="center"
            android:layout_height="100dp">
            <com.pkmmte.view.CircularImageView
                android:id="@+id/image_item_user_comment"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/title_item_comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="@string/abc_action_bar_up_description"
                android:maxLines="3"
                android:paddingTop="6dip"
                android:textColor="@color/nav_drawer_group_grey"
                android:textSize="18sp"
                android:textStyle="bold" />
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/date_item_comment"
                android:layout_below="@id/title_item_comment"
                android:layout_width="fill_parent"
                android:text="@android:string/unknownName"
                android:layout_height="wrap_content"
                android:textColor="@color/date_color"/>
        </RelativeLayout>
    </LinearLayout>
    <id.co.viva.news.app.component.BounvenoTextView
        android:id="@+id/label_item_comment"
        android:layout_below="@id/header_item_list_comment"
        android:layout_width="fill_parent"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="@string/label_amount_comments"
        android:layout_height="wrap_content"
        android:textColor="@color/lynch"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <id.co.viva.news.app.component.BounvenoTextView
        android:id="@+id/content_item_comment"
        android:layout_below="@id/label_item_comment"
        android:layout_width="fill_parent"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:text="@android:string/unknownName"
        android:layout_height="wrap_content"
        android:textColor="@color/lynch"/>
</RelativeLayout>