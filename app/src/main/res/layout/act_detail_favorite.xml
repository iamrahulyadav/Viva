<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scroll_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:parallax_factor="1.9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/white"
        android:padding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thumb_detail_content_favorite_layout">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/thumb_detail_content_favorite"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:layout_below="@id/thumb_detail_content_favorite_layout">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/title_and_kanal_detail_content_favorite_layout"
                android:orientation="horizontal">
                <id.co.viva.news.app.component.RobotoBoldTextView
                    android:id="@+id/title_detail_content_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/date_detail_content_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/date_color"
                android:layout_below="@id/title_and_kanal_detail_content_favorite_layout"
                android:textSize="16sp"/>
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/reporter_detail_content_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_detail_content_favorite"
                android:layout_marginBottom="15dp"
                android:textColor="@color/red"
                android:textSize="16sp"/>
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone"
                android:layout_below="@id/reporter_detail_content_favorite"
                android:id="@+id/horizontal_list"/>
            <com.viewpagerindicator.LinePageIndicator
                android:id="@+id/indicator"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@id/horizontal_list"
                app:strokeWidth="4dp"
                app:lineWidth="30dp"
                app:unselectedColor="#FF888888"
                app:selectedColor="@color/blue"/>
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/content_detail_content_favorite"
                android:lineSpacingExtra="1dp"
                android:layout_below="@id/indicator"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_below="@id/content_detail_content_favorite"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/layout_button_next_previous">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/page_previous_start"
                    android:src="@drawable/previous_start"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/page_previous"
                    android:src="@drawable/previous"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/text_page_index"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Of"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black" />
                <id.co.viva.news.app.component.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/text_page_size"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/page_next"
                    android:src="@drawable/next"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/page_next_end"
                    android:src="@drawable/next_end"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>