<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:parallax_factor="1.9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/white"
        android:padding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thumb_detail_content_favorite_layout">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/thumb_detail_content_favorite"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:layout_below="@id/thumb_detail_content_favorite_layout">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/title_and_kanal_detail_content_favorite_layout"
                android:orientation="horizontal">
                <id.co.viva.news.app.component.BounvenoTextView
                    android:id="@+id/title_detail_content_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/date_detail_content_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/date_color"
                android:layout_below="@id/title_and_kanal_detail_content_favorite_layout"
                android:textSize="16sp"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/reporter_detail_content_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_detail_content_favorite"
                android:layout_marginBottom="20dp"
                android:textColor="@color/red"
                android:textSize="16sp"/>
            <id.co.viva.news.app.component.BounvenoTextView
                android:id="@+id/content_detail_content_favorite"
                android:lineSpacingExtra="15px"
                android:layout_below="@id/reporter_detail_content_favorite"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_below="@id/content_detail_content_favorite"-->
                <!--android:id="@+id/image_content_favorite"></LinearLayout>-->
        </RelativeLayout>
    </RelativeLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>