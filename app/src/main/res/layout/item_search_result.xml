<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:background="@drawable/default_image"
            android:gravity="center"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/image_item_search_result"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/title_item_search_result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:maxLines="3"
                android:paddingTop="6dip"
                android:textColor="@color/nav_drawer_group_grey"
                android:textSize="16sp"
                android:textStyle="bold" />
            <id.co.viva.news.app.component.RobotoTextView
                android:id="@+id/date_item_search_result"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:textSize="12sp"
                android:text="@android:string/unknownName"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:textColor="@color/date_color" />
            <RelativeLayout
                android:id="@+id/subkanal_item_search_result_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginBottom="7dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="2dp">
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/subkanal_item_search_result"
                    android:layout_width="wrap_content"
                    android:text="@android:string/untitled"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>