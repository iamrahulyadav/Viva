<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <id.co.viva.news.app.component.BounvenoTextView
        android:layout_width="wrap_content"
        android:text="@string/abc_searchview_description_search"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/header_grey"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:id="@+id/text_search_result"/>
    <ListView
        android:id="@+id/list_search_result"
        android:layout_width="fill_parent"
        android:layout_below="@id/text_search_result"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:dividerHeight="0dp"
        android:layout_height="fill_parent">
    </ListView>
    <RelativeLayout
        android:id="@+id/loading_progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp">
        <id.co.viva.news.app.component.LoadingView
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_action_refresh_light"/>
    </RelativeLayout>
    <id.co.viva.news.app.component.BounvenoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/label_no_results"
        android:layout_centerInParent="true"
        android:textColor="@color/header_grey"
        android:id="@+id/text_no_result"/>
</RelativeLayout>