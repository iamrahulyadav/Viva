<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/tutorial_screen_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <id.co.viva.news.app.component.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        wheel:barColor="@color/red"
        wheel:progressIndeterminate="true" />
    <id.co.viva.news.app.component.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progress_wheel"
        android:textColor="@color/white"
        android:id="@+id/text_on_tutorial_page"/>
</RelativeLayout>