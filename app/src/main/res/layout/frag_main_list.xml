<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:id="@+id/header_main_list_and_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <id.co.viva.news.app.component.RobotoBoldTextView
                android:id="@+id/text_main_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <id.co.viva.news.app.component.RobotoBoldTextView
                android:id="@+id/date_main_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </RelativeLayout>
        <!-- Big Card -->
        <id.co.viva.news.app.component.LoadMoreListView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list_main_list"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:fadingEdge="none"
            android:fitsSystemWindows="true"
            android:padding="12dp"
            android:scrollbarStyle="outsideOverlay"
            tools:ignore="overdraw"
            android:layout_below="@id/header_main_list_and_date"
            android:layout_height="match_parent"/>
        <!-- Small Card -->
        <id.co.viva.news.app.component.LoadMoreListView
            android:id="@+id/list_main_list_small_card"
            android:layout_width="fill_parent"
            android:layout_below="@id/header_main_list_and_date"
            android:choiceMode="singleChoice"
            android:divider="@color/list_divider"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:dividerHeight="0dp"
            android:layout_height="fill_parent"/>
        <ProgressBar
            android:id="@+id/loading_progress_layout_headline_terbaru"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"/>
        <id.co.viva.news.app.component.RobotoTextView
            android:layout_below="@id/loading_progress_layout_headline_terbaru"
            android:id="@+id/text_loading_data"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_loading_data"/>
        <com.andexert.library.RippleView
            android:id="@+id/layout_ripple_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            ripple:rv_color="@color/transparent"
            ripple:rv_centered="true">
            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:text="Retry"
                android:background="@drawable/shadow_button"/>
        </com.andexert.library.RippleView>
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cm_arrow_up"
            android:layout_margin="16dp"
            fab:fab_colorNormal="@color/new_base_color"
            fab:fab_colorPressed="@color/header_headline_terbaru"
            ripple:fab_colorPressed="@color/grey" />
    </RelativeLayout>
</LinearLayout>