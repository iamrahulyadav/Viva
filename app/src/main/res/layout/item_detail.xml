<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nirhart.parallaxscroll.views.ParallaxScrollView
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:parallax_factor="1.9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thumb_detail_layout">
                <ImageView
                    android:id="@+id/thumb_detail"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:layout_below="@id/thumb_detail_layout">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_and_kanal_detail_layout"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <id.co.viva.news.app.component.RobotoBoldTextView
                        android:id="@+id/title_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                </LinearLayout>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/date_detail"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/date_color"
                    android:layout_below="@id/title_and_kanal_detail_layout"
                    android:textSize="12sp"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/reporter_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_detail"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/reporter_detail"
                    android:id="@+id/horizontal_list"/>
                <com.viewpagerindicator.LinePageIndicator
                    android:id="@+id/indicator"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/horizontal_list"
                    app:strokeWidth="4dp"
                    app:lineWidth="30dp"
                    app:unselectedColor="#FF888888"
                    app:selectedColor="@color/blue"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/content_detail"
                    android:layout_below="@id/indicator"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="6px"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:id="@+id/text_move_video"
                    android:layout_below="@id/content_detail"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_video_click"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:layout_below="@id/text_move_video"
                    android:id="@+id/layout_preview_comment_list">
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Komentar"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_margin="5dp"
                        android:background="@color/transparent"/>
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        android:id="@+id/text_preview_comment_user"/>
                    <id.co.viva.news.app.component.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:id="@+id/text_preview_comment_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/header_related_article"
                    android:layout_below="@id/layout_preview_comment_list"
                    android:background="@color/new_base_color">
                    <id.co.viva.news.app.component.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:text="@string/label_related_article"/>
                </RelativeLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/header_related_article"
                    android:id="@+id/list_related_article"/>
                <id.co.viva.news.app.component.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_no_results"
                    android:textColor="@color/black"
                    android:id="@+id/text_no_result_detail"/>
                <id.co.viva.news.app.component.ProgressWheel
                    android:id="@+id/progress_wheel"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    wheel:barColor="@color/new_base_color"
                    wheel:progressIndeterminate="true" />
                <com.andexert.library.RippleView
                    android:id="@+id/layout_ripple_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    ripple:rv_color="@color/transparent"
                    ripple:rv_centered="true">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:text="Retry"
                        android:background="@drawable/shadow_button"/>
                </com.andexert.library.RippleView>
            </RelativeLayout>
        </RelativeLayout>
    </com.nirhart.parallaxscroll.views.ParallaxScrollView>
</LinearLayout>