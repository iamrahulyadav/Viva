<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/header_headline_terbaru_new</item>
    </style>

    <!-- Camera -->
    <style name="AppThemeTransparent" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBarCamera</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBarCamera</item>
    </style>

    <style name="ActionBarCamera" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_background_transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/ab_background_transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- YouTube -->
    <style name="YouTubeTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/YouTubeActionBar</item>
    </style>

    <style name="YouTubeActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:titleTextStyle">@style/YouTubeActionBar.TitleTextStyle</item>
    </style>

    <style name="YouTubeActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>