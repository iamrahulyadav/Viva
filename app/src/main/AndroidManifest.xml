<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.viva.news.app"
    android:versionCode="12"
    android:versionName="2.0.1">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission android:name="id.co.viva.news.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="id.co.viva.news.app.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="android.support.multidex.MultiDexApplication">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.ActSplashScreen"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ActLanding"
            android:theme="@style/AppTheme"/>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />/>

        <activity
            android:name=".activity.ActBase"
            android:theme="@style/AppTheme"/>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />/>

        <activity
            android:name=".activity.ActDetailHeadline"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActRating"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActRegistration"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActComment"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActDetailFavorite"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActDetailContentDefault"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActDetailContentNews"
            android:theme="@style/AppTheme"/>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />/>

        <activity
            android:name=".activity.ActDetailContentLife"
            android:theme="@style/AppTheme"/>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />/>

        <activity
            android:name=".activity.ActDetailContentBola"
            android:theme="@style/AppTheme"/>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />

        <activity
            android:name=".activity.ActDetailTerbaru"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activity.ActDetailChannelBola"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />
        </activity>

        <activity
            android:name=".activity.ActDetailChannelLife"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />
        </activity>

        <activity
            android:name=".activity.ActDetailChannelNews"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.ActSearchResult" />
        </activity>

        <activity
            android:name=".activity.ActSearchResult"
            android:parentActivityName=".activity.ActLanding"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>
